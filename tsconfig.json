{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "target": "es2022",
    "useDefineForClassFields": false
  },
  "include": [
    "ts/**/*",
    ".eslintrc.cjs",
    "tsconfig.json",
    "rollup.config.js",
    "vitest.config.ts"
  ]
}
